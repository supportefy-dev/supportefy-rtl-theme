[
  {
    "name": "theme_info",
    "theme_name": "<THEME_NAME>",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "select",
        "id": "font_choice",
        "label": "t:labels.font_choice",
        "options": [
          { "value": "tajawal", "label": "t:options.font.tajawal" },
          { "value": "cairo", "label": "t:options.font.cairo" },
          { "value": "changa", "label": "t:options.font.changa" }
        ],
        "default": "tajawal"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          { "value": "90rem", "label": "t:options.page_width.narrow" },
          { "value": "110rem", "label": "t:options.page_width.wide" }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      },
      {
        "type": "select",
        "id": "text_direction",
        "label": "Text Direction",
        "options": [
          { "value": "rtl", "label": "RTL - Arabic" },
          { "value": "ltr", "label": "LTR - English" }
        ],
        "default": "rtl"
      },
      {
        "type": "select",
        "id": "hero_alignment",
        "label": "t:labels.hero_alignment",
        "options": [
          { "value": "center", "label": "t:options.alignment.center" },
          { "value": "right", "label": "t:options.alignment.right" }
        ],
        "default": "center"
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "WhatsApp",
    "settings": [
      {
        "type": "text",
        "id": "whatsapp_number",
        "label": "WhatsApp number"
      },
      {
        "type": "text",
        "id": "whatsapp_message",
        "label": "WhatsApp default message"
      }
    ]
  },
  {
    "name": "Branding",
    "settings": [
      { "type": "image_picker", "id": "logo", "label": "Logo" },
      { "type": "image_picker", "id": "favicon", "label": "Favicon" }
    ]
  },
  {
    "name": "Theme variant",
    "settings": [
      {
        "type": "radio",
        "id": "theme_variant",
        "label": "t:labels.theme_variant",
        "options": [
          { "value": "light", "label": "Light" },
          { "value": "dark", "label": "Dark" }
        ],
        "default": "light"
      }
    ]
  },
  {
    "name": "PWA",
    "settings": [
      {
        "type": "image_picker",
        "id": "pwa_icon_192",
        "label": "PWA icon 192x192"
      },
      {
        "type": "image_picker",
        "id": "pwa_icon_512",
        "label": "PWA icon 512x512"
      }
    ]
  },
  {
    "name": "Preset Theme",
    "settings": [
      {
        "type": "select",
        "id": "preset_theme",
        "label": "t:labels.preset_theme",
        "options": [
          { "value": "souq_classic", "label": "t:options.preset_theme.souq_classic" },
          { "value": "modern_mena", "label": "t:options.preset_theme.modern_mena" },
          { "value": "luxury_arabia", "label": "t:options.preset_theme.luxury_arabia" }
        ],
        "default": "souq_classic"
      }
    ]
  },
  {
    "name": "Supportefy Pro",
    "settings": [
      {
        "type": "text",
        "id": "pro_license",
        "label": "Supportefy License Key"
      }
    ]
  }
]
